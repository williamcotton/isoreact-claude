{
  "name": "isoreact",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "webpack --config webpack.client.js",
    "build:server": "webpack --config webpack.server.js",
    "start": "node dist/server/index.js",
    "dev": "concurrently -k -n client,server,node -c blue,green,yellow \"webpack serve --mode development --config webpack.client.js\" \"webpack --watch --mode development --config webpack.server.js\" \"NODE_ENV=development nodemon --watch dist/server/index.js --delay 1 dist/server/index.js\"",
    "build:cli": "webpack --config webpack.cli.js",
    "cli": "node dist/cli/index.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "ink": "^5.2.1",
    "path-to-regexp": "^6.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@pmmmwh/react-refresh-webpack-plugin": "^0.6.2",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/supertest": "^6.0.3",
    "cheerio": "^1.2.0",
    "concurrently": "^9.2.1",
    "css-loader": "^6.8.1",
    "ink-testing-library": "^3.0.0",
    "jsdom": "^27.0.1",
    "mini-css-extract-plugin": "^2.7.6",
    "nodemon": "^3.1.11",
    "null-loader": "^4.0.1",
    "react-refresh": "^0.18.0",
    "react-refresh-typescript": "^2.0.11",
    "style-loader": "^3.3.3",
    "supertest": "^7.2.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.3",
    "webpack-node-externals": "^3.0.0"
  }
}
